  <appSettings></appSettings>


  <log4net>
    <appender name="LogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log/TimeLog.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date | %level | %message%newline" />
      </layout>
    </appender>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <to value="faatimaasi@gmail.com" />
      <from value="timekeepernotifier@gmail.com" />
      <subject value="Error logging message" />
      <smtpHost value="smtp.gmail.com" />
      <port value="587" />
      <bufferSize value="512" />
      <lossy value="true" />
      <authentication value="Basic" />
      <username value="timekeepernotifier@gmail.com" />
      <password value="timekepeer" />
      <EnableSsl value="true" />
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="ERROR" />
      </evaluator>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="Date and time:   %date%newline%newlineThread:  [%thread]  %newline%newlineLevel:  %-5level %newline%newlineLogger name:  %logger %newline%newlineMESSAGE:   %message%newline%newline%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="LogAppender" />
      <appender-ref ref="SmtpAppender" />
    </root>
  </log4net>

